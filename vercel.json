{
  "version": 2,
  "builds": [
    {
      "src": "server/api/*.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "300mb"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    {
      "src": "/api/projects/(.*)",
      "dest": "/server/api/projects.ts"
    },
    {
      "src": "/api/sections/(.*)",
      "dest": "/server/api/sections.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
} 