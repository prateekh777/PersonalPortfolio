{
  "build": {
    "env": {
      "NPM_CONFIG_UPDATE_NOTIFIER": "false",
      "src": "client/dist/**", "use": "@vercel/static",
      "src": "server/index.ts", "use": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "/server/index.ts" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
