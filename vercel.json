{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "SENDGRID_API_KEY": "@sendgrid_api_key",
    "CONTACT_FROM_EMAIL": "@contact_from_email",
    "CONTACT_TO_EMAIL": "@contact_to_email"
  },
  "build": {
    "env": {
      "VITE_API_URL": "/api"
    }
  }
}