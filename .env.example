# MongoDB Connection String
# Required for database storage
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/portfolio?retryWrites=true&w=majority

# SendGrid API Key
# Required for email functionality
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Contact Form Email Configuration
# The email address that will appear as the sender of confirmation emails
CONTACT_FROM_EMAIL=your.verified.email@example.com
# The email address where contact form submissions will be sent
CONTACT_TO_EMAIL=your.email@example.com

# Google reCAPTCHA Configuration (Optional)
# Used for spam protection on the contact form
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Node Environment
# Set to 'production' for Vercel deployment
NODE_ENV=production